<div class="container mt-3">
  <h1>My Tasks</h1>
  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task), class: 'text-decoration-none text-dark mx-1,' %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}, class: 'text-dark' do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%# <i class="fa-solid fa-plus"></i><%= link_to "Add a new task", tasks_new_path, class: 'text-decoration-none' %>
  <%= link_to tasks_new_path, class: 'text-decoration-none' do %>
    <i class="fa-solid fa-plus"></i><span> Add a new task</span>
  <% end %>
</div>
